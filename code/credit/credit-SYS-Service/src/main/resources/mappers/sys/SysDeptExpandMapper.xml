<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.castiel.dao.sys.SysDeptExpandMapper">
	<select id="query" parameterType="java.util.Map" resultType="java.lang.String">
		select id_ from sys_dept where 1=1
		<if test="parent_id != null">
			and parent_id = #{parent_id}
		</if>
		<if test="keyword != null">
			and (dept_name like CONCAT('%',#{keyword},'%'))
		</if>
	</select>
	
	<select id="getSysDeptsByDeptName" parameterType="java.lang.String" resultMap="com.castiel.dao.generator.SysDeptMapper.BaseResultMap">
		select * from sys_dept where dept_name = #{deptName}
	</select>
</mapper>